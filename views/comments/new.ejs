<% include ../partials/header %>



<div class="container">
     <h1 class="text-center" style="padding: 20px;">Say something about <%= campground.name %></h1>
    <div class="row">
       
        <div style="margin: auto; width: 320px;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">

            <div class="form-group">
                <textarea class="form-control" placeholder="Comment" name="comment[text]"></textarea>
            </div>
        
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit!</button>
            </div>
        </form>
        <a class="text-center" href="/campgrounds">Back</a>
        </div>
    </div>


</div>
<% include ../partials/footer %>